pipeline {
    agent {
        docker {
            image 'arm64v8/maven:3.9.6-eclipse-temurin-21-alpine' 
            args '-v maven-repo:/root/.m2' 
        }
    }
    stages {
        stage('Build') { 
            steps {
                sh 'mvn -B -DskipTests clean package' 
            }
        }
    }
}